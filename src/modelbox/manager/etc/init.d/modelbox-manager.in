### BEGIN INIT INFO
# Provides:        modelbox-manager
# Required-Start:  $network 
# Required-Stop:   $network 
# Default-Start:   2 3 4 5
# Default-Stop:
# Short-Description: Start modelbox-manager service
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin

MODELBOX_ROOT=$(cd $(dirname $0)/../../ && pwd)
if [ "$MODELBOX_ROOT" = "/" ]; then
	MODELBOX_ROOT=""
fi

# this env may changed by script, do not modify
CUSTOM_ENV_FILE=""

if [ -f "$CUSTOM_ENV_FILE" ]; then
	. $CUSTOM_ENV_FILE
else
	. ${MODELBOX_ROOT}@CMAKE_INSTALL_FULL_SYSCONFDIR@/modelbox/manager-opts
	PIDDIR=${MODELBOX_ROOT}/@CMAKE_INSTALL_RUNSTATEDIR@/modelbox-manager
	PIDFILE=${MODELBOX_ROOT}/@CMAKE_INSTALL_RUNSTATEDIR@/modelbox-manager.pid
	MANAGER_INITSCRIPT_DIR=${MODELBOX_ROOT}@CMAKE_INSTALL_FULL_SYSCONFDIR@/modelbox/init-script/modelbox-manager
fi

MODELBOX_MANAGER=${MODELBOX_ROOT}@CMAKE_INSTALL_FULL_BINDIR@/modelbox-manager

if [ ! -x "${MODELBOX_MANAGER}" ]; then
	echo "manager not exists: ${MODELBOX_MANAGER}"
	exit 5
fi


case $1 in
	exec)
		if [ ! -d "$PIDDIR" ]; then
			mkdir $PIDDIR
		fi

		if [ -d ${MANAGER_INITSCRIPT_DIR} ]; then
			for i in ${MANAGER_INITSCRIPT_DIR}/*.sh; do
				if [ -r $i ]; then
				. $i
				fi
			done
			unset i	
		fi

		exec $MODELBOX_MANAGER $MODELBOX_MANAGER_OPTS -v -f -p $PIDFILE
		;;
	start)
		if [ ! -d "$PIDDIR" ]; then
			mkdir $PIDDIR
		fi

		if [ -d ${MANAGER_INITSCRIPT_DIR} ]; then
			for i in ${MANAGER_INITSCRIPT_DIR}/*.sh; do
				if [ -r $i ]; then
				. $i
				fi
			done
			unset i	
		fi

		$MODELBOX_MANAGER $MODELBOX_MANAGER_OPTS -p $PIDFILE
		LOOP=0
		while true; do
			if [ -e "$PIDFILE" ]; then
				break;
			fi
			LOOP=$((LOOP+1))

			if [ $LOOP -gt 10 ]; then
				echo "start modelbox-manager service failed."
				"$0" stop
				exit 1
			fi
			sleep .5
		done

		PID="$(cat $PIDFILE 2>/dev/null)"
		if [ -z "$PID" ]; then
			echo "start modelbox-manager service failed."
			exit 1
		fi
		if [ ! -e "/proc/$PID" ]; then
			echo "start modelbox-manager service failed."
			exit 1
		fi
		echo "start modelbox-manager service success."
		;;
	stop)
		if [ ! -f "$PIDFILE" ]; then
			echo "modelbox-manager service is stopped."
			exit 0
		fi
		PID="$(cat $PIDFILE 2>/dev/null)"
		if [ ! -e "/proc/$PID" ] || [ -z "$PID" ]; then
			echo "modelbox-manager service is stopped"
			exit 0
		fi

		kill -TERM "$PID"
		if [ $? -ne 0 ]; then
			echo "stop modelbox-manager service failed."
			exit 1;
		fi

		LOOP=1
		while true; do
			if [ ! -d "/proc/$PID" ]; then
				break;
			fi

			if [ $LOOP -gt 10 ]; then
				kill -9 "$PID"
				break;
			fi
			LOOP=$((LOOP+1))
			sleep .5
		done
		rm -f "$PIDFILE"
		echo "stop modelbox-manager service success."
		;;
	restart)
		"$0" stop && sleep 1 && "$0" start
		;;
	status)
		PID="$(cat "$PIDFILE" 2>/dev/null)"
		if [ ! -e "/proc/$PID" ] || [ -z "$PID" ]; then
			echo "modelbox-manager service is not running."
			exit 1
		fi
		echo "modelbox-manager service is running. pid $PID"
		status=$?
		;;
	*)
		echo "Usage: $0 {start|exec|stop|restart|status}"
		exit 2
		;;
esac

exit $status

