### BEGIN INIT INFO
# Provides:        modelbox
# Required-Start:  $network 
# Required-Stop:   $network 
# Default-Start:   2 3 4 5
# Default-Stop:
# Short-Description: Start modelbox service
### END INIT INFO

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin

# this env may changed by script, do not modify
CUSTOM_ENV_FILE=""

MODELBOX=@CMAKE_INSTALL_FULL_BINDIR@/modelbox

if [ -f "$CUSTOM_ENV_FILE" ]; then
	. $CUSTOM_ENV_FILE
else
	. @CMAKE_INSTALL_FULL_SYSCONFDIR@/modelbox/modelbox-opts
	PIDDIR=/@CMAKE_INSTALL_RUNSTATEDIR@/modelbox
	PIDFILE=/@CMAKE_INSTALL_RUNSTATEDIR@/modelbox/modelbox.pid
fi

test -x $MODELBOX || exit 5

case $1 in
	start)
		if [ ! -d "$PIDDIR" ]; then
			mkdir $PIDDIR
		fi

		$MODELBOX $MODELBOX_OPTS -p $PIDFILE
		LOOP=0
		while true; do
			if [ -e "$PIDFILE" ]; then
				break;
			fi
			LOOP=$((LOOP+1))

			if [ $LOOP -gt 10 ]; then
				echo "start modelbox service failed."
				"$0" stop
				exit 1
			fi
			sleep .5
		done

		PID="$(cat $PIDFILE 2>/dev/null)"
		if [ -z "$PID" ]; then
			echo "start modelbox service failed."
			exit 1
		fi
		if [ ! -e "/proc/$PID" ]; then
			echo "start modelbox service failed."
			exit 1
		fi
		echo "start modelbox service success."
		;;
	stop)
		if [ ! -f "$PIDFILE" ]; then
			echo "modelbox service is stopped."
			exit 0
		fi
		PID="$(cat $PIDFILE 2>/dev/null)"
		if [ ! -e "/proc/$PID" ] || [ -z "$PID" ]; then
			echo "modelbox service is stopped"
			exit 0
		fi

		kill -TERM "$PID"
		if [ $? -ne 0 ]; then
			echo "Stop modelbox service failed."
			exit 1;
		fi

		LOOP=1
		while true; do
			if [ ! -d "/proc/$PID" ]; then
				break;
			fi

			if [ $LOOP -gt 10 ]; then
				kill -9 "$PID"
				break;
			fi
			LOOP=$((LOOP+1))
			sleep .5
		done
		echo "Stop modelbox service success."
		;;
	restart)
		"$0" stop && sleep 1 && "$0" start
		;;
	status)
		PID="$(cat "$PIDFILE" 2>/dev/null)"
		if [ ! -e "/proc/$PID" ] || [ -z "$PID" ]; then
			echo "modelbox service is not running."
			exit 1
		fi
		echo "modelbox service is running. pid $PID"
		status=$?
		;;
	*)
		echo "Usage: $0 {start|stop|restart|status}"
		exit 2
		;;
esac

exit $status

