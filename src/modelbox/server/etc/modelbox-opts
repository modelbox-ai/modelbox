MODELBOX_ROOT=$(cd $(dirname $0)/../../ && pwd)
if [ "$MODELBOX_ROOT" = "/" ]; then
	MODELBOX_ROOT=""
fi

# custom env variable here

# modelbox server opts
MODELBOX_OPTS="-c ${MODELBOX_ROOT}@CMAKE_INSTALL_FULL_SYSCONFDIR@/modelbox/modelbox.conf"